    <androidx.cardview.widget.CardView
        android:id="@+id/crdOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewaccout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                tools:srcCompat="@tools:sample/avatars" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/txtnameaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:text="Mobile " />

                    <TextView
                        android:id="@+id/txtnumberaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        />

                    <TextView
                        android:id="@+id/txtemailaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        />

                    <TextView
                        android:id="@+id/txtdateaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:text="Depart" />

                    <TextView
                        android:id="@+id/txtspinneraccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Pincode"
                        />

                    <TextView
                        android:id="@+id/txtpincodeaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="State"
                        />

                    <TextView
                        android:id="@+id/txtstateaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="District"
                        />

                    <TextView
                        android:id="@+id/txtdistrictaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="City"
                        />

                    <TextView
                        android:id="@+id/txtcityaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        />

                    <TextView
                        android:id="@+id/txtaddressaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Landmark"
                        />

                    <TextView
                        android:id="@+id/txtlandmarkaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="EID"
                        />

                    <TextView
                        android:id="@+id/txteidaccout"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>













            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>