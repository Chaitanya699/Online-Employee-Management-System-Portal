    <androidx.cardview.widget.CardView
        android:id="@+id/crdOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewtools"
                android:layout_width="150dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent"

                tools:srcCompat="@tools:sample/avatars" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/txtnametool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:text="Mobile " />

                    <TextView
                        android:id="@+id/txtnumbertool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        />

                    <TextView
                        android:id="@+id/txtemailtool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        />

                    <TextView
                        android:id="@+id/txtdatetool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:text="Depart" />

                    <TextView
                        android:id="@+id/txtspinnertool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Pincode"
                        />

                    <TextView
                        android:id="@+id/txtpincodetool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="State"
                        />

                    <TextView
                        android:id="@+id/txtstatetool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="District"
                        />

                    <TextView
                        android:id="@+id/txtdistricttool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="City"
                        />

                    <TextView
                        android:id="@+id/txtcitytool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        />

                    <TextView
                        android:id="@+id/txtaddresstool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="Landmark"
                        />

                    <TextView
                        android:id="@+id/txtlandmarktool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="81dp"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content"
                        android:text="EID"
                        />

                    <TextView
                        android:id="@+id/txteidtool"
                        android:layout_width="match_parent"
                        android:fontFamily="serif-monospace"
                        android:layout_height="wrap_content" />

                </LinearLayout>













            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>